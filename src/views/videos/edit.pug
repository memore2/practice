extends ../base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title",type="text", value=video.title ,placeholder="titName",required,minlength=2)
        input(name="description",type="text",value=video.description , placeholder="description",required,minlength=2)
        input(name="hashtags",type="text",value=video.hashtags.join() , placeholder="hashtags",required)
        input(type="submit",value="Upload")